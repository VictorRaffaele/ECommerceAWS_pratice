{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "es2022"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/productsLayer": [
        "lambda/products/layers/productsLayer/nodejs/productRepository",
      ],
      "/opt/nodejs/productEventsLayer": [
        "lambda/products/layers/productEventsLayer/nodejs/productEventsLayer",
      ], "/opt/nodejs/ordersLayer": [
        "lambda/orders/layers/ordersLayer/nodejs/ordersRepository",
      ], "/opt/nodejs/ordersApiLayer": [
        "lambda/orders/layers/ordersLayer/nodejs/ordersApi",
      ], "/opt/nodejs/orderEventsLayer": [
        "lambda/orders/layers/orderEventsLayer/nodejs/orderEvent",
      ],
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
